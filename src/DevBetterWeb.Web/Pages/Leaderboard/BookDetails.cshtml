@page "{bookId}"
@model DevBetterWeb.Web.Pages.Leaderboard.BookDetailsModel
@{
    ViewData["Title"] = "BookDetails";
}

<h3>@Model!.BookDetailsViewModel!.BookString</h3>

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <b>About</b>
            </div>
            <div class="card-body">
                @Model.BookDetailsViewModel.Details
                <br />
                <br />
                You can purchase @Model.BookDetailsViewModel.Title <a href="@Model.BookDetailsViewModel.PurchaseUrl">here</a>.
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <b>Members who have read @Model.BookDetailsViewModel.Title</b>
            </div>
            <div class="card-body">
                @foreach(var member in Model.BookDetailsViewModel.MembersWhoHaveRead)
                {
                    <a asp-page="/User/Details" asp-route-userId="@member.UserId">@member.FirstName  @member.LastName</a>
                }
            </div>
        </div>
    </div>
</div>
