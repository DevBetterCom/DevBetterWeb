<div class="row" style="margin-top: 20px;">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <b>Transactions</b>
      </div>
      <div class="card-body" style="overflow: auto;">
        <table class="table">
          <thead>
          <tr>
	          <th>
		          Id
	          </th>
	          <th>
                Number
	          </th>
	          <th>
                Paid
	          </th>
	          <th>
		        Out Band
	          </th>
	          <th>
		          Status
	          </th>
	          <th>
		          Finalized At
	          </th>
	          <th>
		          Paid At
	          </th>
	          <th>
		          Amount Due
	          </th>
	          <th>
                Amount Paid
	          </th>
	          <th>
		          Amount Remaining
	          </th>
	          <th>
		          Total
	          </th>
	          <th>
		          Attempt Count
	          </th>
	          <th>
		          Currency
	          </th>
	          <th>
		          Customer Id
	          </th>
	          <th>
                Customer Name
	          </th>
	          <th>
                Customer Email
	          </th>
	          <th>
                Customer Phone
	          </th>
          </tr>
          </thead>
          <tbody>
            @foreach (var item in Model.Invoices)
            {
              <tr>
                <td>
	                <a href="@item.InvoicePdf">@item.Id</a>
                </td>
	              <td>
		            @item.Number
	              </td>
	              <td>
                    @item.IsPaid
	              </td>
	              <td>
                    @item.IsPaidOutOfBand
	              </td>
	              <td>
                    @item.Status
	              </td>
	              <td>
		            @(item.FinalizedAt == null ? "" : @item.FinalizedAt!.Value.ToShortDateString())
	              </td>
	              <td>
					@(item.PaidAt == null ? "" : @item.PaidAt!.Value.ToShortDateString())
	              </td>
	              <td>
                    @(item.AmountDue == 0?"$0":$"${item.AmountDue/100}")
	              </td>
	              <td>
                  @(item.AmountPaid == 0?"$0":$"${item.AmountPaid/100}")
	              </td>
	              <td>
                    @(item.AmountRemaining == 0?"$0":$"${item.AmountRemaining/100}")
	              </td>
	              <td>
		            @(item.Total == 0?"$0":$"${item.Total/100}")
	              </td>
	              <td>
		            @item.AttemptCount
	              </td>
	              <td>
		            @item.Currency
	              </td>
	              <td>
		            @item.CustomerId
	              </td>
	              <td>
                    @item.CustomerName
	              </td>
	              <td>
                    @item.CustomerEmail
	              </td>
	              <td>
                    @item.CustomerPhone
	              </td>
              </tr>
            }
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

@* add role modal *@
<div class="modal fade" id="addRoleModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form asp-page-handler="AddUserToRole">
        <input type="hidden" name="userId" value="@Model.IdentityUser.Id" />
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Role</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <select asp-items="Model.RolesNotAssignedToUser" name="roleId" class="form-control">
            <option>Select</option>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add Role</button>
