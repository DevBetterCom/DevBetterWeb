@page
@model DevBetterWeb.Web.Pages.ArchivedVideos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>ArchiveVideo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveVideo.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArchiveVideo.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveVideo.DateCreated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArchiveVideo.DateCreated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveVideo.VideoUrl)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArchiveVideo.VideoUrl)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ArchiveVideo.Questions)
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.ArchiveVideo.Questions)*@
           @if(!Model.ArchiveVideo.Questions.Any())
           {
               <p>No questions listed.</p>
           }
            @foreach (var question in Model.ArchiveVideo.Questions)
            {
            <p>
                <strong>@question.QuestionText</strong><br />
                <i>@question.TimestampSeconds</i>
            </p>
            }
        </dd>
    </dl>
</div>
<div>
    <span asp-authorize asp-roles="Administrators">
        <a asp-page="./Edit" asp-route-id="@Model.ArchiveVideo.Id">Edit</a> |
    </span>
    <a asp-page="./Index">Back to List</a>
</div>
