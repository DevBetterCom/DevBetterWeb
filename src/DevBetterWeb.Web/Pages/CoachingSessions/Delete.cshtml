@page
@model DevBetterWeb.Web.Pages.CoachingSessions.DeleteModel

@{
    ViewData["Title"] = "Delete";
    if (Model is null) throw new Exception("Model is null.");
    if (Model.CoachingSessionToDelete is null) throw new Exception("CoachingSessionToDelete is null.");

}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ArchiveVideo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Model.CoachingSessionToDelete!.StartAt
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CoachingSessionToDelete!.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
